<?xml version="1.0"?>
<robot name="robot" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:property name="wheel_radius" value="0.036"/>
  <xacro:property name="wheel_length" value="0.008"/>
  <xacro:property name="base_length" value="0.35"/>
  <xacro:property name="base_width" value="0.008"/>
  <xacro:property name="base_height" value="0.015"/>
  <xacro:property name="head_size" value="0.03"/>
  <xacro:property name="passive_wheel_radius" value="0.014"/>
  <xacro:property name="passive_wheel_holder_radius" value="0.015"/>
  <xacro:property name="passive_wheel_holder_length" value="0.014"/>

  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>
  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <xacro:macro name="wheel" params="name color">
    <link name="${name}">
      <visual>
        <geometry>
          <cylinder length="${wheel_length}" radius="${wheel_radius}"/>
        </geometry>
        <material name="${color}"/>
      </visual>
      <collision>
        <geometry>
          <cylinder length="${wheel_length}" radius="${wheel_radius}"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.025"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.000008" ixy="0" ixz="0" iyy="0.000008" iyz="0" izz="0.000016"/>
      </inertial>
      <visual>
        <geometry>
          <box size="0.01 0.072 0.005"/>
        </geometry>
        <material name="white"/>
      </visual>
    </link>
  </xacro:macro>

  <xacro:macro name="base_link" params="name">
    <link name="${name}">
      <visual>
        <geometry>
          <box size="${base_length} ${base_width} ${base_height}"/>
        </geometry>
        <material name="red"/>
      </visual>
      <collision>
        <geometry>
          <box size="${base_length} ${base_width} ${base_height}"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.2"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.0003" ixy="0" ixz="0" iyy="0.025" iyz="0" izz="0.204"/>
      </inertial>
      <visual>
        <geometry>
          <cylinder length="${base_height}" radius="0.175"/>
        </geometry>
        <material name="white"/>
      </visual>
    </link>
  </xacro:macro>

  <xacro:macro name="head" params="name">
    <link name="${name}">
      <visual>
        <geometry>
          <box size="${head_size} ${head_size} ${head_size}"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <geometry>
          <box size="${head_size} ${head_size} ${head_size}"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.02"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.000005" ixy="0" ixz="0" iyy="0.000005" iyz="0" izz="0.000005"/>
      </inertial>
    </link>
  </xacro:macro>

  <xacro:macro name="passive_wheel_holder" params="name">
    <link name="${name}">
      <visual>
        <geometry>
          <cylinder length="${passive_wheel_holder_length}" radius="${passive_wheel_holder_radius}"/>
        </geometry>
        <material name="white"/>
      </visual>
      <collision>
        <geometry>
          <cylinder length="${passive_wheel_holder_length}" radius="${passive_wheel_holder_radius}"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.015"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.000001" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.000002"/>
      </inertial>
    </link>
  </xacro:macro>

  <xacro:macro name="passive_wheel" params="name">
    <link name="${name}">
      <visual>
        <geometry>
          <sphere radius="${passive_wheel_radius}"/>
        </geometry>
        <material name="white"/>
      </visual>
      <collision>
        <geometry>
          <sphere radius="${passive_wheel_radius}"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.01"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="0.000001" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.000001"/>
      </inertial>
    </link>
  </xacro:macro>

  <link name="base_footprint"/>
  <xacro:base_link name="base_link"/>
  <xacro:head name="head"/>
  <xacro:wheel name="left_wheel" color="black"/>
  <xacro:wheel name="right_wheel" color="black"/>
  <xacro:passive_wheel_holder name="passive_wheel_holder"/>
  <xacro:passive_wheel name="passive_wheel"/>

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0 0 -0.036" rpy="0 0 0"/>
  </joint>

  <joint name="base_to_head" type="fixed">
    <parent link="base_link"/>
    <child link="head"/>
    <origin xyz="-0.16 0 0.0225" rpy="0 0 0"/>
  </joint>

  <joint name="base_to_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 -0.175 0" rpy="1.5 1.5 0"/>
    <axis xyz="0 0 -1"/>
  </joint>

  <joint name="base_to_right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 0.175 0" rpy="-1.5 -1.5 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="base_to_passive_wheel_holder" type="fixed">
    <parent link="base_link"/>
    <child link="passive_wheel_holder"/>
    <origin xyz="-0.16 0 -0.015" rpy="0 0 0"/>
  </joint>

  <joint name="passive_wheel_holder_to_passive_wheel" type="fixed">
    <parent link="passive_wheel_holder"/>
    <child link="passive_wheel"/>
    <origin xyz="0 0 -0.0075" rpy="0 0 0"/>
  </joint>

</robot>
